@model IEnumerable<koupit_products_manager.Models.Manufacturer>

@{
    ViewData["Title"] = "Manufacturers";
}

<h2>Manufacturers</h2>

<p>
    <a asp-action="Create">Create new manufacturer</a>
</p>

<table class="table">
    <thead>
    <tr>
        <th>Id</th>
        <th>UUID</th>
        <th>Name</th>
        <th>Country</th>
        <th>Created at</th>
        <th>Updated at</th>
        <th>Deleted at</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var manufacturer in Model)
    {
        <tr>
            <td>@manufacturer.Id</td>
            <td>@manufacturer.Uuid</td>
            <td>@manufacturer.Name</td>
            <td>@manufacturer.Country.Name</td>
            <td>@manufacturer.CreatedAt.ToString("dd/MM/yyyy HH:mm")</td>
            <td>@(manufacturer.UpdatedAt.HasValue ? manufacturer.UpdatedAt.Value.ToString("dd/MM/yyyy HH:mm") : "-")</td>
            <td>@(manufacturer.DeletedAt.HasValue ? manufacturer.DeletedAt.Value.ToString("dd/MM/yyyy HH:mm") : "-")</td>
            <td>
                <a asp-action="Details" asp-route-id="@manufacturer.Id">Details</a> |
                <a asp-action="Edit" asp-route-id="@manufacturer.Id">Edit</a> |
                <a asp-action="Delete" asp-route-id="@manufacturer.Id">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>