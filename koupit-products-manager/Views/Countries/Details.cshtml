@model koupit_products_manager.Models.Country

@{
    ViewData["Title"] = "Country Details";
}

<h2>Country details</h2>

<div>
    <h4>Country</h4>
    <hr/>
    <dl class="row">
        <dt class="col-sm-2">
            Id
        </dt>
        <dd class="col-sm-10">
            @Model.Id
        </dd>
        <dt class="col-sm-2">
            Name
        </dt>
        <dd class="col-sm-10">
            @Model.Name
        </dd>
        <dt class="col-sm-2">
            Code
        </dt>
        <dd class="col-sm-10">
            @Model.Code
        </dd>
        <dt class="col-sm-2">
            Created at
        </dt>
        <dd class="col-sm-10">
            @Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")
        </dd>
        <dt class="col-sm-2">
            Updated at
        </dt>
        <dd class="col-sm-10">
            @(Model.UpdatedAt.HasValue ? Model.UpdatedAt.Value.ToString("dd/MM/yyyy HH:mm") : "-")
        </dd>
        <dt class="col-sm-2">
            Deleted at
        </dt>
        <dd class="col-sm-10">
            @(Model.DeletedAt.HasValue ? Model.DeletedAt.Value.ToString("dd/MM/yyyy HH:mm") : "-")
        </dd>
    </dl>
</div>

<p>
    <a asp-action="Index">Return to country list</a>
</p>