@model IEnumerable<koupit_products_manager.Models.Attribute>

@{
    ViewData["Title"] = "Attributes";
}

<h2>Attributes</h2>

<p>
    <a asp-action="Create">Create new attribute</a>
</p>

<table class="table">
    <thead>
    <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Pretty Name</th>
        <th>Unit</th>
        <th>Data Type</th>
        <th>Created at</th>
        <th>Updated at</th>
        <th>Deleted at</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var attributeModel in Model)
    {
        <tr>
            <td>@attributeModel.Id</td>
            <td>@attributeModel.Name</td>
            <td>@attributeModel.PrettyName</td>
            <td>@(string.IsNullOrEmpty(attributeModel.Unit) ? "-" : attributeModel.Unit)</td>
            <td>@attributeModel.DataType</td>
            <td>@attributeModel.CreatedAt.ToString("dd/MM/yyyy HH:mm")</td>
            <td>@(attributeModel.UpdatedAt.HasValue ? attributeModel.UpdatedAt.Value.ToString("dd/MM/yyyy HH:mm") : "-")</td>
            <td>@(attributeModel.DeletedAt.HasValue ? attributeModel.DeletedAt.Value.ToString("dd/MM/yyyy HH:mm") : "-")</td>
            <td>
                <a asp-action="Details" asp-route-id="@attributeModel.Id">Details</a> |
                <a asp-action="Edit" asp-route-id="@attributeModel.Id">Edit</a> |
                <a asp-action="Delete" asp-route-id="@attributeModel.Id">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>