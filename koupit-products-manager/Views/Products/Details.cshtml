@model Product

@{
    ViewData["Title"] = "Product Details";
}

<h2>Product details</h2>

<div>
    <h4>Product</h4>
    <hr/>
    <dl class="row">
        <dt class="col-sm-2">
            Id
        </dt>
        <dd class="col-sm-10">
            @Model.Id
        </dd>
        <dt class="col-sm-2">
            UUID
        </dt>
        <dd class="col-sm-10">
            @Model.Uuid
        </dd>
        <dt class="col-sm-2">
            Name
        </dt>
        <dd class="col-sm-10">
            @Model.Name
        </dd>
        <dt class="col-sm-2">
            Manufacturer
        </dt>
        <dd class="col-sm-10">
            @Model.Manufacturer.Name
        </dd>
        <dt class="col-sm-2">
            Part Number
        </dt>
        <dd class="col-sm-10">
            @Model.PartNumber
        </dd>
        <dt class="col-sm-2">
            Description
        </dt>
        <dd class="col-sm-10">
            @Model.Description
        </dd>
        <dt class="col-sm-2">
            Created At
        </dt>
        <dd class="col-sm-10">
            @Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")
        </dd>
        <dt class="col-sm-2">
            Updated At
        </dt>
        <dd class="col-sm-10">
            @(Model.UpdatedAt.HasValue ? Model.UpdatedAt.Value.ToString("dd/MM/yyyy HH:mm") : "-")
        </dd>
        <dt class="col-sm-2">
            Deleted At
        </dt>
        <dd class="col-sm-10">
            @(Model.DeletedAt.HasValue ? Model.DeletedAt.Value.ToString("dd/MM/yyyy HH:mm") : "-")
        </dd>
    </dl>
</div>

<p>
    <a asp-action="Index">Return to product list</a>
</p>